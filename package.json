{
  "name": "config4",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "format:all": "prettier --write \"**/*.{js,json,graphql}\"",
    "format:check": "prettier --debug-check \"**/*.{js,json,graphql}\"",
    "lint": "./node_modules/.bin/eslint .",
    "precommit": "lint-staged",
    "test": "CONFIG_ROOT=test node ./node_modules/.bin/ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autolotto/config4.git"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "eslint --quiet",
        "git add"
      ],
      "*.{js,json,graphql}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "debug": "^2.6.3",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "eslint": "^5.5.0",
    "eslint-config-lottery": "^1.1.1",
    "flat": "^4.0.0",
    "heroku-client": "^3.0.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "1.13.5"
  },
  "ava": {
    "verbose": true,
    "concurrency": 4,
    "failFast": false,
    "failWithoutAssertions": false,
    "powerAssert": true,
    "color": true
  },
  "description": "Package for loading config files",
  "bugs": {
    "url": "https://github.com/autolotto/config4/issues"
  },
  "homepage": "https://github.com/autolotto/config4#readme",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=8.x"
  },
  "author": "kris read",
  "license": "ISC"
}
